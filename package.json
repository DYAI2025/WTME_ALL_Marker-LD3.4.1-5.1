{
  "name": "marker-toolchain",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "setup": "bash bootstrap.sh",
    "validate": "tsx tools/validate_markers.ts",
    "watch": "chokidar 'markers/**/*.y?(a)ml' -c 'npm run link:markers && npm run compile:markers'",
    "link:markers": "tsx tools/link_markers.ts",
    "compile:markers": "tsx tools/compile_markers.ts",
    "eval": "tsx tools/eval_markers.ts",
    "crawl": "tsx tools/crawl_and_label.ts",
    "merge:auto": "tsx tools/merge_autogen.ts",
    "review:gui": "tsx tools/review_server.ts",
    "build:ext": "tsc -p extension && cp dist/marker_registry.json extension/dist/ && cp -R models extension/dist/models"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "fast-glob": "^3.3.2",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/chrome": "^0.0.246",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.30",
    "chokidar-cli": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2"
  }
}
