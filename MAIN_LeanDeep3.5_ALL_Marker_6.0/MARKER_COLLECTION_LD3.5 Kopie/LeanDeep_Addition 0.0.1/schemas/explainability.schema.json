{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["hits", "explainability"],
  "properties": {
    "hits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "level", "score", "ranges"],
        "properties": {
          "id": { "type": "string" },
          "level": { "type": "string", "enum": ["ATO", "SEM", "CLU", "MEMA"] },
          "score": { "type": "number" },
          "ranges": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["start", "end"],
              "properties": {
                "start": { "type": "integer" },
                "end": { "type": "integer" }
              }
            }
          }
        }
      }
    },
    "explainability": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["rules", "offsets", "confidence"],
        "properties": {
          "rules": { "type": "array", "items": { "type": "string" } },
          "features": { "type": "object" },
          "offsets": { "type": "array", "items": { "type": "integer" } },
          "confidence": { "type": "number" }
        }
      }
    }
  }
}
